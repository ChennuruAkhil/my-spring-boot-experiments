<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet author="raja" id="createTable-customers-sequence">
        <createSequence
            sequenceName="customers_seq"
            incrementBy="50"
            startValue="1"
        />
        <rollback>
            <dropSequence sequenceName="customers_seq"/>
        </rollback>
    </changeSet>
    <changeSet id="createTable-customers" author="raja">
        <createTable tableName="customers">
            <column name="id" type="bigint" defaultValueSequenceNext="customers_seq">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="text" type="varchar(1024)">
                <constraints nullable="false"/>
            </column>
            <column name="tenant" type="varchar(100)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
        </createTable>
        <rollback>
            <dropTable tableName="customers"/>
        </rollback>
        <modifySql dbms="postgresql">
            <append value=" PARTITION BY LIST (tenant)"/>
        </modifySql>
    </changeSet>
</databaseChangeLog>
